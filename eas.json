{
  "cli": {
    "version": ">= 7.6.0"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "ios": {
        // resourceClass values like 'm-medium' are for managed workflow.
        // If you are in bare workflow, use 'default', 'medium', or 'large'.
        "resourceClass": "medium", // Changed to a bare workflow compatible value
        "autoIncrement": true
        // buildNumber is usually handled by autoIncrement or set in app.json/XCode
        // "buildNumber": "1.0.0" // This would usually be in app.json or set by autoIncrement
      },
      "android": {
        // resourceClass values like 'm-medium' are for managed workflow.
        // If you are in bare workflow, use 'default', 'medium', or 'large'.
        "resourceClass": "medium", // Changed to a bare workflow compatible value
        "autoIncrement": true
        // buildNumber is usually handled by autoIncrement or set in app.json/Gradle
        // "buildNumber": "1" // This would usually be in app.json or set by autoIncrement
        // "gradle": "..." // This property is not allowed here. Custom gradle steps are done via hooks or in your actual android/build.gradle
      },
      "env": {
        "APP_ENV": "development",
        "API_URL": "https://dev.api.example.com"
      }
    },
    "preview": {
      "distribution": "internal",
      "ios": {
        "resourceClass": "medium",
        "autoIncrement": true
      },
      "android": {
        "resourceClass": "medium",
        "autoIncrement": true
      },
      "channel": "preview",
      "env": {
        "APP_ENV": "preview",
        "API_URL": "https://preview.api.example.com"
      }
    },
    "production": {
      "distribution": "store",
      "ios": {
        "resourceClass": "large", // Use 'large' for production in bare workflow
        "autoIncrement": true,
        "production": true
      },
      "android": {
        "resourceClass": "large", // Use 'large' for production in bare workflow
        "autoIncrement": true
      },
      "channel": "production",
      "env": {
        "APP_ENV": "production",
        "API_URL": "https://api.example.com"
      }
    }
  },
  "submit": {
    "production": {
      "ios": {
        "appleId": "your-apple-id@example.com",
        "ascAppId": "your-app-store-connect-app-id",
        "teamId": "YOUR_APPLE_DEVELOPER_TEAM_ID",
        // Most submission-related properties like apiKeyPath, fastlane, track, etc.
        // are arguments to the 'eas submit' command or handled by EAS during the interactive process.
        // They are NOT direct properties within the 'ios' or 'android' objects here.
        // Instead, some can be configured under a 'config' object for specific plugins,
        // or they are handled by the EAS CLI itself.
        // For example, 'track' is an argument to 'eas submit --track production'

        // If you're using App Store Connect API Key, you provide its path
        // when setting up EAS credentials or via env vars, not directly in eas.json like this.
        // Same for fastlane, it's more about EAS's internal implementation.
        // Submission IDs are generated by EAS or passed as CLI arguments.
      },
      "android": {
        // serviceAccountKeyPath is usually provided when configuring your credentials with EAS,
        // or as an environment variable, not directly in eas.json like this.
        "serviceAccountKeyPath": "./private_keys/google-play-service-account.json",
        // track is an argument to 'eas submit --track production'
        // releaseStatus is an argument to 'eas submit'
        // changesNotSentForReview is an argument to 'eas submit'
        // rollout is an argument to 'eas submit'
      }
    },
    "preview": {
      "ios": {
        "appleId": "your-apple-id@example.com"
        // track is an argument to 'eas submit --track internal' for TestFlight
      },
      "android": {
        "serviceAccountKeyPath": "./private_keys/google-play-service-account.json"
        // track is an argument to 'eas submit --track internal' for Google Play
      }
    }
  }
}